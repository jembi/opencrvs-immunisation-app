{
  "name": "rcbs-frontend",
  "version": "0.0.1",
  "description": "Rwanda Case Based Surveillance",
  "scripts": {
    "build": "browserify --entry app/scripts/app.js | uglifyjs --output dist/bundle.js",
    "start": "light-server -s . -p 7777 -w \". # npm run build # reload\"",
    "test": "npm run -s test:code && npm run -s test:style",
    "test:code": "tap -R nyan --cov test/**/*.js",
    "test:style": "standard --verbose | snazzy",
    "cov": "npm run test:code -- --coverage-report=lcov"
  },
  "main": "app/scripts/app.js",
  "repository": "git@github.com:jembi/rcbs-frontend.git",
  "author": "Jembi Health Systems NPC",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.3.0",
    "light-server": "^2.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "tap": "^10.3.2",
    "uglify-js": "^3.0.11"
  },
  "dependencies": {
    "angular": "^1.6.4",
    "angular-cookies": "^1.6.4",
    "angular-material": "^1.1.4",
    "angular-messages": "^1.6.4",
    "angular-resource": "^1.6.4",
    "angular-route": "^1.6.4",
    "md-form-builder": "^0.5.3"
  }
}
